{
  "name": "@effect-ak/tg-bot",
  "version": "1.3.0",
  "type": "module",
  "description": "Telegram bot framework with long polling, webhooks, and fluent builder API",
  "license": "MIT",
  "keywords": [
    "telegram",
    "telegram-bot",
    "bot-framework",
    "long-polling",
    "webhook",
    "typescript"
  ],
  "author": {
    "name": "Aleksandr Kondaurov",
    "email": "kondaurov.dev@gmail.com"
  },
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc"
  },
  "homepage": "https://tg-bot-sdk.website",
  "repository": {
    "type": "git",
    "url": "https://github.com/kondaurovDev/tg-bot-sdk",
    "directory": "packages/bot"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/*": "./dist/*"
  },
  "files": [
    "dist/*.js",
    "dist/*.cjs",
    "dist/*.d.ts"
  ],
  "dependencies": {
    "@effect-ak/tg-bot-client": "workspace:^",
    "@effect-ak/tg-bot-api": "workspace:^"
  }
}
